<Page x:Class="LanguageSchool.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid Background="#fff">
        <ScrollViewer>
            <StackPanel>
                <DataGrid Name="DGServises" AutoGenerateColumns="False" HorizontalAlignment="Left" IsReadOnly="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Initialized="StackPanel_Initialized">
                                        <MediaElement Width="100" Height="100" Initialized="MediaElement_Initialized"/>
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel>
                                                <TextBlock Initialized="TextBlock_Initialized"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Initialized="TextBlock_Initialized_1"/>
                                                <TextBlock> Рублей за </TextBlock>
                                                <TextBlock Initialized="TextBlock_Initialized_2"/>
                                                <TextBlock> Минут</TextBlock>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Name="dick"  Initialized="TextBlock_Initialized_3" Visibility="Hidden"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Редактировать" Initialized="Button_Initialized" Click="Button_Click"/>
                                                <Button Content="Удалить" Initialized="Button_Initialized_1" Click="Button_Click_1"/>
                                                <Button Content="Новый заказ" Initialized="Button_Initialized_2" Click="Button_Click_2"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
